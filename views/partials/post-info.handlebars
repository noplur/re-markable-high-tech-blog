<!-- start of main section -->

<main>
  {{#each posts}}
<section class ="post">
    <div class="card row row-cols-1 row-cols-md-1 d-flex">
        <div class="card-header">
           <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
            <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
            <!-- <div class="box"> -->
            <p class="card-body border border-dark">{{content}}</p>
            <!-- </div> -->
    </div>

    <div class="meta">
    by {{user.username}} on {{format_date created_at}}
  |
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</section>
 {{/each}}
</main>

<!-- end of main section -->