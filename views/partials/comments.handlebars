<!-- start of main section -->

<main>
    <section class ="post">
        <div class="card row row-cols-1 row-cols-md-1 d-flex">
            <div class="card-header">
               <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
                <p>Posted by {{user.username}} on {{format_date created_at}}</p>
            </div>
                <!-- <div class="box"> -->
                <p class="card-body border border-dark">{{content}}</p>
                <!-- </div> -->
        </div>
    </section>

    <section class ="post">
        <div class="card row row-cols-1 row-cols-md-1 d-flex">
            <div class="card-header">
            </div>
            <form id="signup-form" class="card-body border border-dark">

                <label class="form-label" for="comment">Comment</label><br />
          <textarea  id="comment" type="text" autofocus="true" class="form-input-comment"></textarea>

          <button type="submit" class="comment-btn">Submit</button> 
          <a class="comment-submit-link" href="/comments"></a>
        </form>
        </div>
    </section>
    </main>
    
    <!-- end of main section -->