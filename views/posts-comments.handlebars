<!-- start of main section -->

   
<main>
    {{#each posts}}
<section class ="comment-post">
    <div class="card row row-cols-1 row-cols-md-1 d-flex">
        <div class="card-header">
           <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
            <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
            <!-- <div class="box"> -->
            <p class="card-body border border-dark">{{comment}}</p><br /><br />
            <p>- {{user.username}} on {{format_date created_at}}</p>
            <!-- </div> -->
    </div>
</section>
    {{/each}}
</main>
   



<!-- end of main section -->

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}

