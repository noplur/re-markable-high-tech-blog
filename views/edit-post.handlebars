
{{> secondary-header post.secondary-header}}

<main>
    <div class="edit-post card card row row-cols-1 row-cols-md-1 d-flex">
        <h3 class="card-header">Edit Post</h3>
        <form id="edit-post-form" class="card-body border border-dark">
          <label class="form-label" for="title">Title</label><br />
          <textarea name="title" type="text" value="{{post.title}}" autofocus="true" class="form-input" />{{post.title}}</textarea><br />
  
          <label class="form-label" for="content">Content</label> <br />
          <textarea name="content" type="text" value="{{post.content}}" autofocus="true" class="form-input-create-new-post" />{{post.content}}</textarea><br />
  
    
          <button type="submit" class="btn"><a href="/dashboard">Update Post</a></button>
          {{!-- <button type="button" class="btn"><a href="/dashboard">Delete</a></button> --}}
        </form>
    </div>
</main>



<script src="/javascript/edit-post.js"></script>
