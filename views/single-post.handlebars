
{{> main-header post.main-header}}

<!-- start of main section -->
<main>
{{> post-info post}}

{{#if loggedIn}}
    <section class ="post">
        <div class="card row row-cols-1 row-cols-md-1 d-flex">
            <div class="card-header">
            </div>
                <form id="comment-form" class="card-body border border-dark">
                    <label class="form-label" for="comment">Comment</label><br />
                        <textarea  name="comment" type="text" autofocus="true" class="form-input-comment"></textarea>
                            <button type="submit" class="btn submit-btn">Submit</button>
                </form>
        </div>
{{/if}}

{{> comments post.comments}}
    </section>
</main>
    
<!-- end of main section -->

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}